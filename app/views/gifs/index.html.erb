<%= link_to 'Add a Gif!', new_gif_path %>

<div id="columns">


  <% @gifs.each do |gif| %>
    <figure>
      <%= link_to (image_tag gif.url), gif_path(gif) %>
      <figcaption><%= gif.name %></figcaption><div class="heart_icon">
      <%= link_to image_tag("heart.png"), favorite_gif_path(gif, type: "favorite"), method: :put %>
    </div>
      
    </figure>
  <% end %>

</div>